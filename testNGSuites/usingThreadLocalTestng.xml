<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="All Test Suite" parallel="tests">
    <test verbose="2" preserve-order="true" name="SmokeTest1">
        <classes>
            <class name="SeleniumGrid.UsingThreadLocal">
                <methods>
                    <include name="loginAsStandardUser"/>
                </methods>
            </class>
        </classes>
    </test>


    <test verbose="2" preserve-order="true" name="SmokeTest2">
        <classes>
            <class name="SeleniumGrid.UsingThreadLocal">
                <methods>
                    <include name="loginAsErrorUser"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>